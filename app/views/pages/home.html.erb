<%= stylesheet_link_tag "top" %>

<div class="top">

  <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-frame">
          <div class="form-area">
            <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
            <%= form_with url: result_path, method: :get do |f| %>
              <label for="address">エリア</label>
              <%= f.search_field :address, class: "form-control mb-4", placeholder: "東京" %>
              <%= f.submit "探す", class: "form-control btn-primary mb-4" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="panel-area m-5">
      <h1 class="section-title">おすすめのエリア</h1>
      <div class="row">

        <div class="panel-item col-lg-3 col-6">
          <span>東京</span>
          <%= link_to result_path(address: "東京"), method: :post do %>
            <%= image_tag "img_tokyo.jpg", class: "panel-image" %>
          <% end %>
          <div class="shadow"></div>
        </div>

        <div class="panel-item col-lg-3 col-6">
          <span>大阪</span>
          <%= link_to result_path(address: "大阪"), method: :post do %>
            <%= image_tag "img_osaka.jpg", class: "panel-image" %>
          <% end %>
          <div class="shadow"></div>
        </div>

        <div class="panel-item col-lg-3 col-6">
          <span>京都</span>
          <%= link_to result_path(address: "京都"), method: :post do %>
            <%= image_tag "img_kyoto.jpg", class: "panel-image" %>
          <% end %>
          <div class="shadow"></div>
        </div>

        <div class="panel-item col-lg-3 col-6">
          <span>札幌</span>
          <%= link_to result_path(address: "札幌"), method: :post do %>
            <%= image_tag "img_sapporo.jpg", class: "panel-image" %>
          <% end %>
          <div class="shadow"></div>
        </div>

      </div>
    </div>
  </div>

</div>

