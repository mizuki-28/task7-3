<div class="container room-show">
  <div class="row">

    <div class="col-md-8">

      <% if @room.room_image.attached? %>
        <%= image_tag @room.room_image, class: "room-show-image" %>
      <% else %>
        <%= image_tag "no_image.jpg", class: "room-show-image" %>
      <% end %>

      <div class="room-show-detile">

        <div class="room-show-detile-icon">
          <%= image_tag user_image_url(current_user), class: "host-icon" %>
        </div>

        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.room_title %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>

      </div>

      <p class="room-show-detile-content"><%= @room.room_body %></p>

    </div>

    <div class="col-md-4">
      <div class="room-show-nav">

        <h5 class="price-icon"><%= @room.price %> / 日</h5>

        <div class="room-show-date-select">

          <%= form_with model: @reservation, method: :get, url: new_reservation_path do |f| %>

            <label for="start_at">開始日</label>
            <%= f.date_field :start_at, class: "form-control mb-4" %>

            <label for="end_at">終了日</label>
            <%= f.date_field :end_at, class: "form-control mb-4" %>

            <label for="people">人数</label>
            <%= f.number_field :people, class: "form-control mb-4" %>
            
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.hidden_field :user_id, value: current_user.id %>

            <%= f.submit "予約する", class: "btn btn-primary form-control" %>

          <% end %>

        </div>

      </div>
    </div>

  </div>
</div>