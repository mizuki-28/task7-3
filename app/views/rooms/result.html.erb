<div class="container-fiuld room">

  <h4 class="pb-4">検索結果：<%= @addresses.count%>件</h4>
  
  <div class="row">

    <% @addresses.each do |address| %>
      <div class="col-sm-6 col-lg-4 col-xl-3">
        <div class="room-frame-inner">
          <%= link_to room_path(address) do %>

            <div class="room-image-out">
              <% if address.room_image.attached? %>
                <%= image_tag address.room_image, class: "room-image" %>
              <% else %>
                <%= image_tag "no_image.jpg", class: "room-image" %>
              <% end %>
            </div>

            <div class="room-profile">
              <p class="room-profile-name"><%= address.room_title %></p>
              <p class="room-profile-city"><%= address.address %></p>
              <p class="room-profile-price price-icon"><%= address.price %></p>
            </div>

          <% end %>
        </div>
      </div>
    <% end %>

  </div> 

</div>