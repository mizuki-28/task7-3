<div class="container-field room-new">
  <div class="row">

    <div class="col-lg-2 room-nav room-nav-pc d-lg-block d-none">
      <ul>
        <li class="active"><a href="/rooms/new">基本情報</a></li>
      </ul>
    </div>

    <div class="col-lg-2 room-nav room-nav-mobile d-lg-none">
      <ul>
        <li class="active"><a href="/rooms/new">基本情報</a></li>
      </ul>
    </div>

    <div class="col-lg-10 room-view">
      <div class="room-view-box">
        <%= form_for @room do |f| %>

          <div class="update-content">
            <div class="row">
              <h5>ルーム情報登録</h5>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="name">ルーム名</label>
              <%= f.text_field :room_title, placeholder: "ルーム名を入力", class: "form-control mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="content">ルーム紹介</label>
              <%= f.text_area :room_body, rows: 5, id: "room_body", placeholder: "ルーム説明を入力", class: "form-control mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="price">料金</label>
              <%= f.number_field :price, id: "price", placeholder: "1日あたりの料金を入力", class: "form-control mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="address">住所</label>
              <%= f.text_field :address, id: "address", placeholder: "住所を入力", class: "form-control mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="image">ルーム画像</label>
              <%= f.file_field :room_image, id: "room_image", placeholder: "ルーム画像をアップロード", class: "mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <%= f.submit "登録", class: "col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>

  </div>
</div>