<%= stylesheet_link_tag "users" %>

<div class="container-field user">
  <div class="row">

    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li class=""><%= link_to 'アカウント', '/users/account' %></li>
        <li class="active"><%= link_to 'プロフィール', '/users/profile' %></li>
      </ul>
    </div>

    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li class=""><%= link_to 'アカウント', '/users/account' %></li>
        <li class="active"><%= link_to 'プロフィール', '/users/profile' %></li>
      </ul>
    </div>

    <div class="col-lg-10 user-view">
      <div class="user-view-box">

        <div class="update-content">
          <div class="row">
            <h5>プロフィール</h5>
          </div>
        </div>

        <%= form_for :user, url: users_profile_url(@user), action: :update_profile, method: :post do |f| %>
          
          <div class="update-content">
            <div class="row">
              <div class="col-md-6 offset-md-3">
                <div class="icon-box">
                  <%= image_tag user_image_url(current_user), class: "icon-image host-icon" %>
                </div>
              </div>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="image">アイコン画像</label>
              <%= f.file_field :user_image, id: "user_image", class: "mb-4 col-md-9", placeholder: "アイコン画像をアップロード" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="name">名前</label>
              <%= f.text_field :user_name, id: "user_name", placeholder: "名前を入力", value: @user.user_name, class: "form-control mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="introduction">自己紹介</label>
              <%= f.text_area :about, rows: 5, id: "about", placeholder: "自己紹介を入力", value: @user.about, class: "form-control mb-4 col-md-9" %>
            </div>
          </div>

          <div class="update-content">
            <div class="row">
              <%= f.submit "更新", class: "col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>

        <% end %>
          
      </div>
    </div>

  </div>
</div>